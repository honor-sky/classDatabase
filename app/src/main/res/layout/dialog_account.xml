<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roundsquare_layout"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <Button
        android:id="@+id/cancle_btn_account"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="X"
        android:textSize="20dp"
        android:background="#0000ffff"/>


    <TextView
        android:id="@+id/Title_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계좌 정보 입력"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        app:boxStrokeErrorColor="#FF4F28"
        app:errorTextColor="#FF4F28"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/accountNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="계좌번호"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        app:boxStrokeErrorColor="#FF4F28"
        app:errorTextColor="#FF4F28"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="은행사"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        app:boxStrokeErrorColor="#FF4F28"
        app:errorTextColor="#FF4F28"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/accountMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="잔액"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton_checkcard"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@drawable/radiobutton"
            android:text="  체크카드"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/radioButton_creditcard"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:button="@drawable/radiobutton"
            android:text="  신용카드"
            android:textColor="@color/black" />
    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/button_register_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundsquare_button"
        android:text="등록"
        android:textColor="@color/black"
        android:textSize="20dp" />

</LinearLayout>